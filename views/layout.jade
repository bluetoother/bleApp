doctype html
html
    block head
        title= title
        link(rel='stylesheet', href='/stylesheets/bootstrap.min.css', media='screen')
        link(rel='stylesheet', href='/stylesheets/bootstrap-theme.min.css', media='screen')
        link(href='bower_components/bootstrap/dist/css/bootstrap.min.css', rel='stylesheet')
        link(href='bower_components/metisMenu/dist/metisMenu.min.css', rel='stylesheet')
        link(href='dist/css/sb-admin-2.css', rel='stylesheet')
        link(href='bower_components/font-awesome/css/font-awesome.min.css', rel='stylesheet', type='text/css')
        script(src='javascripts/jquery-2.1.3.min.js')
        script(src='javascripts/bootstrap.min.js')

        
        script(type='text/javascript', src='/bower_components/metisMenu/dist/metisMenu.min.js')
        script(type='text/javascript', src='dist/js/sb-admin-2.js')
        script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.0.0/lodash.min.js')

    body
        nav(class='navbar navbar-default navbar-fixed-top')
            div.container-fluid
                div.navbar-header
                    button(type='button', class='navbar-toggle',  data-toggle='collapse', data-target='.navbar-collapse', aria-expanded='false', aria-controls='navbar')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a(href='/')
                        img(alt='sivann-logo', src='/images/sivann_logo_high_res2.png', class='sivann-logo')

        
        div.container-fluid
            div.row
                div.sidebar-nav.navbar-collapse.col-sm-3.col-md-2.sidebar
                    ul#side-menu.nav                     
                      li
                        a(href='/devs')
                          i.fa.fa-navicon.fa-fw
                          |  Devices
                      |                         
                      li
                        a(href='#')
                          i.fa.fa-wrench.fa-fw
                          |  Control
                          span.fa.arrow
                        |                             
                        ul.nav.nav-second-level
                            each ctrlDev in ctrlDevs
                              - var href = '/devs_' + ctrlDev.addr + '_' + ctrlDev.id
                              li
                                a(href= href)= ctrlDev.name
                              |                                 
                        // /.nav-second-level
                      |                         
                      li
                        a(href='#')
                          i.fa.fa-cubes.fa-fw
                          |  Sensors
                          span.fa.arrow
                        |                             
                        ul.nav.nav-second-level
                            each sensorDev in sensorDevs
                              - var href = '/devs_' + sensorDev.addr + '_' + sensorDev.id
                              li
                                a(href= href)= sensorDev.name
                              |      
                        // /.nav-second-level

                block content
